<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>YELP : San Francisco</h1>
     
  </div>

  <form action="/yelp_searches/search_yelp" method="get" remote="true" >

    <div class="form-group"> 
      <label>No. of Records to be displayed:</label>
      <input type="text" class="form-control" placeholder="Limit" name="limit" ></input>
    </div>

    <div class="form-group">
      <label>Select Ratings:</label>
      <select name="rating" >
        <option >Ratings</option>
          <option value="1.0">1</option>
          <option value="1.5">1.5</option>
          <option value="2.0">2</option>
          <option value="2.5">2.5</option>
          <option value="3.0">3</option>
          <option value="3.5">3.5</option>
          <option value="4.0">4</option>
          <option value="4.5">4.5</option>
          <option value="5.0">5</option>
      </select>
    </div> 

    <div class="form-group">
      <label>Select Category:</label>
      <select name="category" >
        <option >Category</option>
          <%@cat.each do |name|%>
            <option value="<%=name.id%>"><%=name.title%></option>
          <%end%>  
      </select>
    </div> 

    <div class="form-group">
      <label>Select Date:</label>
      <input type="text" class="form-control" read_only="true" placeholder="Pick Date" name="date" id="date" class="hasDatepicker"></input>
    </div> 

    <button type="submit" class="btn btn-primary">Submit</button> 

 </form>


</div>

<script type="text/javascript">

$(document).ready(function() {
  $( "#date" ).datepicker({
    inline: true,
    showAnim: 'slideDown',
    changeMonth: true,
    changeYear: true,
    showButtonPanel: true,
    maxDate: new Date()
  });
});


</script>